{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "composite": true,
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "paths": {
      "@effect-ts/system": ["./src"],
      "@effect-ts/system/*": ["./src/*"]
    },
    "plugins": [
      {
        "transform": "../plugin/src/index.ts",
        "modules": [{ "module": "@effect-ts/system", "src": "./src" }]
      }
    ]
  },
  "include": ["src/**/*.ts"]
}
