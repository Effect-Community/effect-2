{
  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "ES2018",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "module": "ESNext",
    "typeRoots": ["./node_modules/@types"],
    "noEmit": true,
    "strict": true,
    "paths": {
      "@effect-ts/system": ["./packages/system/src"],
      "@effect-ts/system/*": ["./packages/system/src/*"],
      "@effect-ts/core": ["./packages/core/src"],
      "@effect-ts/core/*": ["./packages/core/src/*"]
    }
  },
  "exclude": ["packages/*/lib/**/*.ts", "node_modules/**/*.ts"]
}
